apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: traefik-default-certificate
  namespace: traefik
spec:
  dnsNames:
  - {{ k3s_domain }}
  - "*.{{ k3s_domain }}"
  duration: 2160h # 90d
  renewBefore: 360h # 15d
  issuerRef:
    group: cert-manager.io
    kind: ClusterIssuer
    name: {{ certificate_issuer_name }}
  secretName: traefik-default-certificate
  usages:
  - digital signature
  - key encipherment
---
apiVersion: traefik.containo.us/v1alpha1
kind: TLSStore
metadata:
  name: default
  namespace: traefik
spec:
  defaultCertificate:
    secretName: traefik-default-certificate
